{
  "manifest_version": 3,
  "name": "CoverItUp",
  "version": "1.0",
  "description": "Auto-generate tailored cover letters for job applications.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "minimum_chrome_version": "93",
  "background": {
    "service_worker": "background.bundle.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}